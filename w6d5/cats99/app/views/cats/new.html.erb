<h1>Welcome to the cat factory!</h1>

<form action='<%= cats_url %>' method= 'POST' >
  <label for="cat_name">Cat name: </label>
  <input name="cat[name]" id="cat_name" type="text" value="<%= @cat.name %>"   >
  
  <br>  
  <label>
   Sex:  M
    <input sex="cat[sex]" type="radio" value="M">
  </label>

  <label>
    F
    <input sex="cat[sex]" type="radio" value="F">
  </label>

  <label for="cat_color">Cat color: </label>
  <%# fix this %>
  <select name="cat[color]" id='cat_color' > @VALID_COLORS.each 
  </select>

</form>